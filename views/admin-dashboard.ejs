<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>

  <style>
   /* =====================
   THEME VARIABLES
===================== */
:root {
  --header-bg: #0f172a;
  --sidebar-bg: #020617;
  --sidebar-hover: #1e293b;

  --primary: #2563eb;
  --primary-hover: #1d4ed8;

  --accent: #10b981;
  --accent-hover: #059669;

  --bg-light: #ffffff;
  --bg-muted: #f1f5f9;

  --text-dark: #0f172a;
  --text-muted: #64748b;

  --border: #e5e7eb;
  --radius: 12px;
}

/* =====================
   RESET & BASE
===================== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Inter", "Segoe UI", sans-serif;
}

body {
  display: flex;
  min-height: 100vh;
  background: var(--bg-muted);
  overflow: hidden;
  color: var(--text-dark);
}

/* =====================
   TOP BAR
===================== */
.topbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 64px;
  background: linear-gradient(90deg, #020617, #0f172a);
  color: white;
  display: flex;
  align-items: center;
  padding: 0 28px;
  z-index: 100;
  font-size: 1.4rem;
  font-weight: 700;
  letter-spacing: 0.5px;
  box-shadow: 0 4px 14px rgba(0,0,0,0.35);
}

/* =====================
   SIDEBAR
===================== */
.sidebar {
  position: fixed;
  top: 64px;
  left: 0;
  width: 240px;
  bottom: 0;
  background: var(--sidebar-bg);
  padding: 24px 12px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.sidebar a {
  padding: 14px 18px;
  border-radius: var(--radius);
  text-decoration: none;
  color: #e5e7eb;
  font-weight: 600;
  transition: all 0.25s ease;
}

.sidebar a:hover {
  background: var(--sidebar-hover);
  color: white;
  transform: translateX(4px);
}

/* =====================
   MAIN CONTENT
===================== */
.main-content {
  margin-top: 64px;
  margin-left: 240px;
  padding: 30px 36px;
  overflow-y: auto;
  flex: 1;
  height: calc(100vh - 64px);
}

.page-title {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 28px;
  color: var(--primary);
}

/* =====================
   CARDS
===================== */
.card {
  background: var(--bg-light);
  padding: 28px 32px;
  border-radius: var(--radius);
  box-shadow: 0 12px 30px rgba(15,23,42,0.08);
  margin-bottom: 36px;
  transition: transform 0.2s ease;
}

.card:hover {
  transform: translateY(-2px);
}

.card h2 {
  font-size: 1.4rem;
  margin-bottom: 18px;
  color: var(--text-dark);
}

/* =====================
   FORMS
===================== */
.form-group {
  margin-bottom: 14px;
}

input, select {
  width: 100%;
  padding: 12px 14px;
  border-radius: 10px;
  border: 1px solid var(--border);
  font-size: 0.95rem;
  background: #f8fafc;
  transition: border 0.2s, box-shadow 0.2s;
}

input:focus, select:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(37,99,235,0.15);
}

/* =====================
   BUTTONS
===================== */
.btn {
  width: 100%;
  padding: 13px;
  border-radius: 10px;
  font-size: 1rem;
  font-weight: 700;
  border: none;
  cursor: pointer;
  margin-top: 12px;
  transition: all 0.25s ease;
}

.btn-primary {
  background: var(--primary);
  color: white;
}

.btn-primary:hover {
  background: var(--primary-hover);
  transform: translateY(-1px);
}

.btn-accent {
  background: var(--accent);
  color: white;
}

.btn-accent:hover {
  background: var(--accent-hover);
  transform: translateY(-1px);
}

/* =====================
   TABLES
===================== */
table {
  width: 100%;
  border-collapse: collapse;
  background: var(--bg-light);
  border-radius: var(--radius);
  overflow: hidden;
  box-shadow: 0 8px 24px rgba(15,23,42,0.06);
  margin-bottom: 36px;
}

th {
  background: var(--primary);
  color: white;
  padding: 14px;
  font-size: 0.85rem;
  text-transform: uppercase;
  letter-spacing: 0.6px;
}

td {
  padding: 14px;
  border-bottom: 1px solid var(--border);
  font-size: 0.95rem;
  color: var(--text-dark);
}

tr:nth-child(even) {
  background: #f8fafc;
}

tr:hover {
  background: #eef2ff;
}

/* =====================
   SECTION HEADERS
===================== */
.section-title {
  margin: 40px 0 18px;
  font-size: 1.6rem;
  font-weight: 700;
  color: var(--text-dark);
  display: flex;
  align-items: center;
  gap: 10px;
}

.section-title::after {
  content: "";
  flex: 1;
  height: 2px;
  background: var(--border);
}

.action-row {
  margin-bottom: 22px;
}


  </style>
</head>
<body>

  <!-- Top Bar -->
  <div class="topbar">
    Admin Dashboard
  </div>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/attendance-page">Attendance System</a>
    <a href="/logout">Logout</a>
  </div>

  <!-- Main Content -->
  <div class="main-content">

    <!-- Page Title -->
    <header class="page-title">User Management</header>

    <!-- User Management Card -->
    <div class="card">
      <h2>Manage Users</h2>

      <!-- Register Face Button -->
      <div class="action-row">
  <a href="/register-page" class="btn btn-primary">Register Face</a>
</div>


      <div class="form-group">
        <input id="name" placeholder="Name">
      </div>
      <div class="form-group">
        <input id="email" placeholder="Email">
      </div>
      <div class="form-group">
        <input id="password" type="password" placeholder="Password">
      </div>
      <div class="form-group">
        <select id="role">
          <option value="EMPLOYEE">EMPLOYEE</option>
          <option value="ADMIN">ADMIN</option>
        </select>
      </div>

      <button class="btn btn-accent" onclick="createUser()">Create User</button>
      <p id="status"></p>
    </div>

    <!-- Todayâ€™s Attendance Table -->
    <h2 class="section-title">Today's Attendance</h2>
    <table>
      <tr>
        <th>Name</th>
        <th>Time</th>
        <th>Status</th>
        <th>Address</th>
      </tr>
      <% if (today && today.length > 0) { %>
        <% today.forEach(r => { %>
          <tr>
            <td><%= r.name %></td>
            <td><%= r.attendance_time %></td>
            <td><%= r.status %></td>
            <td><%= r.address %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="4">No attendance for today</td></tr>
      <% } %>
    </table>

    <div class="card">
  <h2>ðŸ“… Monthly Attendance Export</h2>

  <div style="display:flex; gap:10px; flex-wrap:wrap;">
    <select id="month">
      <option value="1">January</option>
      <option value="2">February</option>
      <option value="3">March</option>
      <option value="4">April</option>
      <option value="5">May</option>
      <option value="6">June</option>
      <option value="7">July</option>
      <option value="8">August</option>
      <option value="9">September</option>
      <option value="10">October</option>
      <option value="11">November</option>
      <option value="12">December</option>
    </select>

    <input
      id="year"
      type="number"
      placeholder="Year"
      value="<%= new Date().getFullYear() %>"
    />
  </div>

  <br>
  <button onclick="exportMonthly()">ðŸ“¥ Export Monthly Excel</button>
</div>


    <!-- Monthly Attendance -->
    <h2 class="section-title">Monthly Attendance Summary</h2>
    <table>
      <tr>
        <th>Name</th>
        <th>Days Present</th>
      </tr>
      <% if (monthly && monthly.length > 0) { %>
        <% monthly.forEach(r => { %>
          <tr>
            <td><%= r.name %></td>
            <td><%= r.days_present %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="2">No monthly data available</td></tr>
      <% } %>
    </table>

    <!-- Late Attendance -->
    <h2 class="section-title">Late Attendance Count</h2>
    <table>
      <tr>
        <th>Name</th>
        <th>Late Days</th>
      </tr>
      <% if (late && late.length > 0) { %>
        <% late.forEach(r => { %>
          <tr>
            <td><%= r.name %></td>
            <td><%= r.late_days %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="2">No late records</td></tr>
      <% } %>
    </table>
    <button onclick="exportExcel()" style="margin-bottom:15px;">
  ðŸ“¥ Export to Excel
</button>


  </div>

  <script>
    async function createUser() {
      const name  = document.getElementById("name").value.trim();
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value.trim();
      const role = document.getElementById("role").value;

      const res = await fetch("/admin/create-user", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Authorization": "Bearer " + localStorage.getItem("token")
        },
        body: JSON.stringify({ name, email, password, role })
      });

      const data = await res.json();
      document.getElementById("status").innerText =
        data.error || "User created successfully!";
    }
    function exportExcel() {
  window.location.href = "/admin/export/today";
}

function exportMonthly() {
    const month = document.getElementById("month").value;
    const year = document.getElementById("year").value;

    if (!month || !year) {
      alert("Select month and year");
      return;
    }

    // triggers file download (cookie-based auth works)
    window.location.href = `/admin/export/monthly?month=${month}&year=${year}`;
}
  </script>

</body>
</html>
